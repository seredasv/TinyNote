<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/card_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/dim_48"
    app:cardCornerRadius="@dimen/dim_4"
    app:cardElevation="@dimen/dim_4">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/ll_color"
            android:layout_width="@dimen/dim_16"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@android:color/holo_red_dark"
            android:orientation="horizontal"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_count"
            android:layout_width="@dimen/dim_32"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toEndOf="@+id/ll_color"
            android:layout_toLeftOf="@+id/tv_count"
            android:layout_toRightOf="@+id/ll_color"
            android:layout_toStartOf="@+id/tv_count"
            android:ellipsize="marquee"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dim_8"
            android:textColor="@android:color/black" />

    </RelativeLayout>
</android.support.v7.widget.CardView>